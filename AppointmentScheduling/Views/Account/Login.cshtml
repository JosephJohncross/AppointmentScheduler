@model AppointmentScheduling.Models.ViewModels.LoginViewModel


<h2>Sign In</h2>

<div class="">
    <p class="">Use your registered email id and password to login</p>

    <section id="loginForm">
        <form class="">
            <h4>Use your registered email id and password to login</h4>
            <div asp-validation-summary="All"></div>
            <div class="">
                <label class="" asp-for="Email"></label>
                <div class="">
                    <input type="email" asp-for="Email"/>
                    <span class="" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="">
                <label class="" asp-for="Password"></label>
                <div class="">
                    <input type="password" asp-for="Password"/>
                    <span class="" asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="">
                <label class="" asp-for="RememberMe">
                    <input type="checkbox" asp-for="RememberMe"/>
                </label>
                Remember Me?
            </div>
            <div class="bg-green-500">
                <input type="submit" value="Log in"/>
            </div>
            <p class="">
                <a asp-action="Register">Sign Up</a>
            </p>
        </form>
    </section>
</div>